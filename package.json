{
    "name": "inventory-pos-system-backend",
    "version": "1.0.0",
    "description": "Backend API for the Inventory Management and POS System",
    "main": "dist/server.js",
    "private": true,
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "start": "node dist/server.js",
        "build": "tsc && npx prisma generate",
        "dev": "NODE_ENV=development nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "prettier": "prettier --check \"**/*.ts\"",
        "prettier:fix": "prettier --write \"**/*.ts\"",
        "validate": "npm run lint && npm run prettier",
        "test": "NODE_ENV=test jest --runInBand --coverage",
        "test:watch": "NODE_ENV=test jest --watch --runInBand",
        "prepare": "husky install",
        "prisma:migrate:dev": "npx prisma migrate dev",
        "prisma:migrate:deploy": "npx prisma migrate deploy",
        "prisma:generate": "npx prisma generate",
        "prisma:studio": "npx prisma studio",
        "prisma:seed": "ts-node prisma/seed.ts",
        "docker:build": "docker build -t inventory-pos-backend:latest .",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down --volumes",
        "docker:logs": "docker-compose logs -f app",
        "docker:db:cli": "docker-compose exec db psql -U $DB_USER -d $DB_NAME"
    },
    "dependencies": {
        "@prisma/client": "^6.5.0",
        "@types/cookie-parser": "^1.4.8",
        "@types/ms": "^2.1.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "express-rate-limit": "^7.5.0",
        "helmet": "^7.1.0",
        "http-status": "^1.7.4",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "ms": "^2.1.3",
        "reflect-metadata": "^0.2.1",
        "winston": "^3.11.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.4.1",
        "@nestjs/mapped-types": "^2.0.5",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "^18.19.22",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.2",
        "nodemon": "^3.1.9",
        "prettier": "^3.2.5",
        "prisma": "^6.5.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run prettier:fix"
        ]
    }
}
